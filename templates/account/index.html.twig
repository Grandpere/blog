{% extends 'base.html.twig' %}

{% block title %}
    Manage Account!
    {{ parent() }}
{% endblock %}

{% block body %}
<div class="post">
    <div class="d-flex justify-content-between">
        <h1>Your profile</h1>
        <span>
            <a class="btn btn-info" href="{{ path('web_account_edit', {'id':user.id}) }}">
                <span class="btn-label mr-2"><i class="fa fa-pencil"></i></span>Update
            </a>
        </span>
    </div>
    <div class="row mx-0">
        <div class="col-sm-12 col-md-2 account-image">
            <img src="{{ user.avatar }}">
        </div>
        <div class="col-sm-12 col-md-10">
            <p>Username : <span>{{ user.username }}</span></p>
            <p>Email : <span>{{ user.email }}</span></p>
            <p>Firstname : <span>{{ user.firstname }}</span></p>
            <p>Lastname : <span>{{ user.lastname }}</span></p>
            <p>Avatar : <span>{{ user.avatar }}</span></p>
            <p>test</p>
            <p>test</p>
        </div>
    </div>
</div>
{% endblock %}
