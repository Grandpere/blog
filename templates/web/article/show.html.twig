{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
<article>
    {% if article.coverImage is defined and article.coverImage is not null %}
    <img src="{{ article.coverImage }}" alt="Image de l'article">
    {% endif %}
    <h2>{{ article.title }}</h2>
    <div class="content">{{ article.content }}</div>
    <span> {{ article.author.firstname ~ ' ' ~ article.author.lastname }} </span>
    <div class="tags">
        {% for tag in article.tags %}
            <small>
                <span class="badge badge-light">{{ tag.title }}</span>
            </small>
        {% endfor %}
    </div>
    <a href="{{ path('web_articles_index') }}">Revenir Ã  la liste</a>
</article>
{% endblock %}
