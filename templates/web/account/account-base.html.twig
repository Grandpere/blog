{% extends 'base.html.twig' %}

{% block body %}
    <div class="post">
        <h1>{% block account_title %}

            {% endblock %}
        </h1>
        {% if user is defined and user is not null %}
        <div class="row">
            <div class="col-md-3">
                {% if is_granted('IS_AUTHENTICATED_FULLY') and app.user.id == user.id %}
                <div class="list-group mb-2">
                    <a href="{{ path('web_account_index', {'id':user.id}) }}" class="list-group-item list-group-item-action"><i class="fas fa-house-user"></i> <span>Account home</span></a>
                    <a href="{{ path('web_account_edit', {'id':user.id}) }}" class="list-group-item list-group-item-action"><i class="fas fa-user-edit"></i> <span>Edit Information</span></a>
                    <a href="{{ path('web_account_edit-password', {'id':user.id}) }}" class="list-group-item list-group-item-action"><i class="fas fa-edit"></i> <span>Edit Password</span></a>
                </div>
                {% endif %}
            </div>
            <div class="mt-sm-2 mt-md-0 col-md-9">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                {% block account_content %}

                                {% endblock %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
            <p>No record found</p>
        {% endif %}
    </div>
{% endblock %}