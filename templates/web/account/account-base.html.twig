{% extends 'base.html.twig' %}

{% block body %}
    <div class="post">
        <h1>{% block account_title %}

            {% endblock %}
        </h1>
        {% if user is defined and user is not null %}
        <div class="row">
            <div class="col-md-3">
                {% if user.avatar is not null %}
                <div class="account-image mb-2">
                    <img src="{{ user.avatar }}">
                </div>
                {% endif %}
                <div class="list-group mb-2">
                    <a href="{{ path('web_account_edit', {'id':user.id}) }}" class="list-group-item list-group-item-action">Edit Personal Information</a>
                    <a href="{{ path('web_account_edit-password', {'id':user.id}) }}" class="list-group-item list-group-item-action">Edit Password</a>
                </div>
            </div>
            <div class="mt-sm-2 mt-md-0 col-md-9">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                {% block account_content %}

                                {% endblock %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
            <p>No record found</p>
        {% endif %}
    </div>
{% endblock %}