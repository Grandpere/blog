<nav aria-label="pagination">
    <ul class="pagination justify-content-center">
        {% if pagination.page > 1 %}
            <li class="page-item">
                <a class="page-link" href="{{ path(pagination.route, pagination.route_params|merge({'page': 1})) }}">
                    <<
                </a>
            </li>
            <li class="page-item">
                <a class="page-link" href="{{ path(pagination.route, pagination.route_params|merge({'page': pagination.page-1})) }}">
                    <
                </a>
            </li>
        {% endif %}
        {# Affichage de toutes les pages entre p-4 et p+4 sauf si < 1 ou > nbPages #}
        {% for p in range(max(pagination.page-4, 1), min(pagination.page+4, pagination.pages_count)) %}
            <li {% if p == pagination.page %} class="page-item active"{% endif %}>
                <a class="page-link" href="{{ path(pagination.route, pagination.route_params|merge({'page': p})) }}">
                    {{ p }}
                </a>
            </li>
        {% endfor %}
        {% if pagination.page < pagination.pages_count %}
            <li class="page-item">
                <a class="page-link" href="{{ path(pagination.route, pagination.route_params|merge({'page': pagination.page+1})) }}">
                    >
                </a>
            </li>
            <li class="page-item">
                <a class="page-link" href="{{ path(pagination.route, pagination.route_params|merge({'page': pagination.pages_count})) }}">
                    >>
                </a>
            </li>
        {% endif %}
    </ul>
</nav>