<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        {% endblock %}
    </head>
    <body>
        {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
            <div class="alert alert-warning" style="margin-bottom: 0;">
                You are currently switched to this user.
                <a href="{{ path('web_articles_index', {'_switch_user': '_exit'}) }}">Exit Impersonation</a>
            </div>
        {% endif %}
        <nav class="navbar navbar-expand-lg navbar-dark navbar-bg mb-5">
            <ul class="navbar-nav ml-auto">
                {% if is_granted('ROLE_USER') %}
                    <li><a href="{{ path('web_account_index') }}">Profile</a></li>
                    <li><a href="#">Create Post</a></li>
                    <li><a href="{{ path('app_logout') }}">Logout</a></li>                               
                {% else %}
                    <li><a href="{{ path('app_login') }}">Login</a></li>
                    <li><a href="{{ path('app_register') }}">Register</a></li>
                {% endif %}
            </ul>
        </nav>
        <nav class="navbar navbar-expand-lg">
            <ul class="navbar-nav">
                <li><a href="{{ path('web_articles_index') }}">Articles</a></li>
                <li><a href="{{ path('web_tags_index') }}">Catégories</a></li>
            </ul>
        </nav>
        <nav class="navbar navbar-expand-lg">
            <ul class="navbar-nav">
                <li><a href="{{ path('admin_article_index') }}">Articles</a></li>
                <li><a href="{{ path('admin_comment_index') }}">Commentaires</a></li>
                <li><a href="{{ path('admin_tag_index') }}">Catégories</a></li>
            </ul>
        </nav>

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
