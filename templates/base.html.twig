<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!-- Facebook -->
        <meta property="og:url" content="{{ app.request.get('_route') }}" />
        <meta property="og:type" content="website" />
        <meta property="og:title" content="Blog - Lorenzo Marozzo" />
        <meta property="og:description" content="Community blog for sharing resources" />
        <meta property="og:image" content="Your shareable image src" />
        <!-- Twitter -->
        <meta name="twitter:card" content="summary" />
        <meta name="twitter:site" content="@" />
        <meta name="twitter:title" content="Blog - Lorenzo Marozzo" />
        <meta name="twitter:description" content="Community blog for sharing resources" />
        <meta name="twitter:image" content="Your page image full path" />
        <!-- Linkedin -->
        <meta property="og:title" content="Blog - Lorenzo Marozzo"/>
        <meta property="og:description" content="Description that will show in the preview"/>
        <meta property="og:image:width" content="1920" />
        <meta property="og:image:height" content="976" />
        <title>
            {% block title %}
                - Lorenzo Marozzo
            {% endblock %}
        </title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="site">
            {% block header %}
                {% include('_header.html.twig') %}
            {% endblock %}

            <main class="container">
                {% include '_flash_messages.html.twig' %}

                <div id="toast-container" aria-live="polite" aria-atomic="true">
                    <div id="toasts">
                        <div class="toast" data-delay="2000" aria-live="assertive" aria-atomic="true">
                            <div class="toast-header">
                                <strong class="mr-auto">Admin</strong>
                                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="close"><span aria-hidden="true">&times;</span></button>
                            </div>
                            <div class="toast-body">Toast message</div>
                        </div>
                    </div>
                </div>

                {% block body %}{% endblock %}
            </main>

            {% block footer %}
                {% include('_footer.html.twig') %}
            {% endblock %}
        </div>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
