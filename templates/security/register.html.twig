{% extends 'base.html.twig' %}

{% block title %}
    Register!
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="post">
        <form method="post">
            <h1 class="h3 mb-3 font-weight-normal">Please register</h1>
            <label for="inputEmail">Email</label>
            <input type="email" name="email" id="inputEmail" class="form-control mb-2" required autofocus>
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>

            <div class="checkbox mt-3 mb-1">
                <label>
                    <input type="checkbox" name="_remember_me" required> Agree to terms I for sure read
                </label>
            </div>

            <button class="btn btn-primary mb-4" type="submit">
                Register
            </button>
        </form>

        <a href="{{ path('app_login') }}">Vous avez d√©ja un compte? connectez vous</a>
    </div>
{% endblock %}